<p id="notice"><%= notice %></p>

<header>
  <h2><%= @question.title %></h2>
  <span> <strong>User:</strong> <%= @question.user.email %> </span>
</header>

<div class="content">
  <p> <%= @question.description %> </p>
  <hr>
  <p> <%= link_to "Answer this question", new_answer_url(question:  @question) %></p>
  <div class="">
    <% @answers.each do |answer| %>
      <div>
        <span><small>By: <%= answer.user.email %>  <%= answer.updated_at.strftime(" on %m/%b/%Y") %></small></span>
        <div><%= answer.content %></divs>


        <% if current_user == answer.user %>
            <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
            <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </div>
      <br>
    <% end %>
  </div>
</div>




