<%- model_class = Question -%>
<div class="page-header">
  <h2><%= @question.title %></h2>
  <span> By <%= link_to @question.user.email, "#" %> on <%=@question.updated_at.strftime("%d/%b/%Y")%></span>
</div>

<div class="">
  <%= @question.description %>
  <hr>
  <%unless @answers.nil?%>
  <div id="answers">
    <%@answers.each do | answer |%>
    <div class="card">
      <%= answer.content %>
      <div class="card-footer">
         <span>By <%= answer.user.email%> on <%= answer.updated_at.strftime("%d/%b/%Y")%></span>
      </div>
    </div>
    <% end%>
  </div>
  <% end%>
  <br>
  <span><%= link_to "Answer this question", new_answer_url(question:  @question), class: "btn btn-default pull-right" %></span>
</div>

<% if current_user == @question.user %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
<% end %>
